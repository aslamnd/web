=render :partial => 'header'
hr
#contact
  section#contact-form
    =simple_form_for @contact_form, :url => new_contact_form_path do |f|
      =f.input :name, :label => false
      =f.input :email, :as => :email, :label => false
      =f.input :service, :label => false do
        =f.select :service, grouped_options_for_select(@contact_form.localized_services), :prompt => t('simple_form.prompts.contact_form.service')
      =f.input :start_time, :as => :select, :collection => @contact_form.localized_start_times, :prompt => t('simple_form.prompts.contact_form.start_time') , :label => false
      =f.input :budget, :as => :select, :collection => @contact_form.localized_budgets,  :prompt => t('simple_form.prompts.contact_form.budget'), :label => false
      =f.input :message, :as => :text, :label => false
      =f.submit
