figure#slideshow
  #slides
    ul
      -unless (slides = yield(:slideshow)).blank?
        =slides
      -else
        li#slide-1
          =image_tag 'slides/txus_typing.jpg', width: 1000, height: 280
          headergroup
            h2= t '.slide1.header'
            h3= t '.slide1.text'
        li#slide-2
          =image_tag 'slides/rails_rumble.jpg', width: 1000, height: 280 
          headergroup
            h2 
              =link_to t('.slide2.header'), 'http://railsrumble.com/' 
            h3=t '.slide2.text'
        li#slide-4
          =image_tag 'slides/offices.jpg', width: 1000, height: 280
          headergroup
            h2=t '.slide3.header' 
            h3=t '.slide3.text'
        li#slide-7
          =image_tag 'slides/ipad.jpg', width: 1000, height: 280
          headergroup
            h2=t '.slide4.header'
            h3=t '.slide4.text'
  nav.navi

javascript:
  $(function(){
    if( $('#slides ul li').length > 1) {
      $("#slides ul").randomize("li");
      $("#slides").scrollable(
        {
          circular: true,
          easing: 'bounce',
          speed: 800
        }
      ).navigator();
  }});
